<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_buttons_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    tools:context=".MenuFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/menuButton"
            style="@style/AppTheme.ImageButton"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="menuButton"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/photoButton"
            style="@style/AppTheme.Button"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:text="Photo"
            app:layout_constraintBottom_toTopOf="@+id/menuButton"
            app:layout_constraintEnd_toStartOf="@+id/mapButton"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/mapButton"
            style="@style/AppTheme.Button"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="44dp"
            android:text="Map"
            app:layout_constraintBottom_toTopOf="@+id/historyButton"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/historyButton"
            style="@style/AppTheme.Button"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="52dp"
            android:text="History"
            app:layout_constraintBottom_toTopOf="@+id/aboutButton"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/aboutButton"
            style="@style/AppTheme.Button"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="60dp"
            android:text="About"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <!--android:src="@drawable/photo"-->
    </android.support.constraint.ConstraintLayout>
</FrameLayout>